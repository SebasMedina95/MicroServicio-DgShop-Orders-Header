generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDIENTE
  SOLICITADA
  ENTREGADA
  CANCELADA
}

model TBL_PURCHASE_ORDER {
  id          Int         @id @default(autoincrement())
  totalAmount Float
  totalItems  Int
  status      OrderStatus
  paid        Boolean     @default(false)
  paidAt      DateTime?
  createAt    DateTime    @default(now())
  updateAt    DateTime    @default(now())
}

